source 'https://rubygems.org'
gem 'rails', '3.2.14'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'

  # bootstrap 3
  gem 'therubyracer'
  gem 'less-rails-bootstrap', '~> 3.0.0.wip', github: 'sinfin/less-rails-bootstrap-3'
end
gem 'jquery-rails'

# db
gem 'mongoid', "~> 3.0.0"

# doc uploads
gem 'rmagick'
gem 'carrierwave'
gem 'carrierwave-mongoid'
gem 'jquery-ui-rails' # needed for JQuery UI Upload

# doc conversion
gem 'libreconv', github: 'kmewhort/libreconv'
gem 'pdfkit' # NOTE: need wkhtml, at least 0.11 for link support (ubuntu repos only have 0.9)

# licenses
gem 'creative_commons_rails', github: 'kmewhort/creative_commons_rails'

# forms & styling
gem 'simple_form'
gem 'best_in_place', github: 'bernat/best_in_place'
gem 'jquery-ui-rails'

# user management
gem 'devise'
gem 'rolify'
gem 'cancan'

# deployment
gem 'capistrano'

# internationalization
gem 'i18n'



